<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Buttons -->

    <style name="ExtendedFloatingActionButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="ExtendedFloatingActionButton.Contained">
        <item name="android:backgroundTint">@color/pandas_dark</item>
        <item name="android:fontFamily">@font/pandas_grading_secondary_medium</item>
        <item name="android:textColor">@color/pandas_white</item>
    </style>

    <style name="ExtendedFloatingActionButton.Contained.Large">
        <item name="android:height">60dp</item>
        <item name="android:fontFamily">@font/pandas_grading_secondary_bold</item>
    </style>

    <style name="ExtendedFloatingActionButton.Contained.Regular">
        <item name="android:height">48dp</item>
    </style>

    <style name="ExtendedFloatingActionButton.Contained.Regular.TextBold">
        <item name="android:fontFamily">@font/pandas_grading_secondary_bold</item>
    </style>

    <style name="ExtendedFloatingActionButton.Outlined">
        <item name="android:backgroundTint">@color/pandas_white</item>
        <item name="android:fontFamily">@font/pandas_grading_secondary_medium</item>
        <item name="android:textColor">@color/pandas_dark_2</item>
        <item name="strokeColor">@color/pandas_nobel</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ExtendedFloatingActionButton.Outlined.Large">
        <item name="android:height">60dp</item>
        <item name="android:fontFamily">@font/pandas_grading_secondary_bold</item>
    </style>

    <style name="ExtendedFloatingActionButton.Outlined.Regular">
        <item name="android:height">48dp</item>
    </style>

    <style name="ExtendedFloatingActionButton.Outlined.Regular.TextBold">
        <item name="android:fontFamily">@font/pandas_grading_secondary_bold</item>
    </style>



    <!-- Text -->
    <style name="TextAction">
        <item name="android:fontFamily">@font/pandas_grading_secondary_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/pandas_grey</item>
    </style>
</resources>